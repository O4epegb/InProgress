$bg = #252525
$brown = #4e4437
$red = #d9726f
$green = #97bb93
$yellow = #edbb6e
$blue = #76a8f1
$beige = #e5c499
$sky = #bdd0e5
$grey = #c8b8a9
$sblue = #74cddd
$syellow = #f7b520
$spink = #e32474
$sgreen = #4cc598
$darkgreen = #121d14
$darkblue = #111421
$darkviolet = #2b1724
$darkbrown = #382927
	

html
	font-size 16px

body
	color $grey
	font-size 1em
	font-family "Nunito", sans-seris
	overflow hidden
	
.menu-wrapper
	height 100px
	width 100%
	z-index 10
	position fixed
	
.menu-btn
	float right
	display inline-block
	margin-top 55px
	div
		width 50px
		height 8px
		background-color $grey
		backface-visibility hidden
		border-radius 3px
		transition opacity .3s, transform .3s
	div:nth-child(2)
		margin 10px 0
	&:hover
		div:nth-child(1)
			background-color $sblue
		div:nth-child(2)
			background-color $syellow
		div:nth-child(3)
			background-color $sgreen
			
.menu-btn.menu-btn-active
	div:nth-child(1)
		background-color $spink
		transform translate(0px, 15px) rotate(45deg)
	div:nth-child(2)
		opacity 0
	div:nth-child(3)
		background-color $spink
		transform translate(0px, -21px) rotate(-45deg)
		
.menu
	width 100%
	height 100vh
	text-align center
	position fixed
	opacity 0
	vertical-align middle
	background-color rgba(255, 255, 255, 0.8)
	transition all .3s
	ul
		list-style-type none
		display block
		position absolute
		width 100%
		padding 0
		top 50%
		left 50%
		transform translate(-50%,-50%)
		a
			color $bg
			font-size 3em
		a.active-menu-link
			color $spink
		a:hover
			color $sblue
			
.menu-active
	z-index 5
	opacity 1
	
main section
	width 100%
	height 100vh
	padding 30px
	text-align center
	position absolute
	top 100%
	transition all .5s ease-out
	h1, h2
		span:nth-of-type(1)
			color $sblue
		span:nth-of-type(2)
			color $syellow
		span:nth-of-type(3)
			color $spink
		span:nth-of-type(4)
			color $sgreen
		span:nth-of-type(5)
			color #fff	
		a
			color $grey
	p
		max-width 720px
		margin auto
		font-size 1.5em
	&.page1
		background-color $bg
	&.page2
		background-color $darkbrown
	&.page3
		background-color $darkblue
	&.page4
		background-color $darkviolet
	&.page5
		background-color $darkgreen
		
.page-header, .page1
	h2
		font-size 5em
		max-width 1400px
		margin 0
		margin-top 2em
		text-transform uppercase
		letter-spacing 2px
		display inline-block		
		
.apply-btn
	margin-top 40px 
	margin-right 20px
	padding 1em 3em
	display inline-block
	border $grey 2px solid
	border-radius 4px
	font-size 1.2em
	color $grey
	&:active
		transform scale(1.1)
		
.apply-btn, .submit-btn		
	&.bg-blue
		background-color $sblue
		color $bg
		border-color $sblue
	&.bg-yellow
		background-color $syellow
		color $bg
		border-color $syellow
	&.bg-pink
		background-color $spink
		color $bg
		border-color $spink
	&.bg-green
		background-color $sgreen
		color $bg
		border-color $sgreen
	&.bg-white
		background-color #fff
		color $bg
		border-color #fff
	
.active-page
	display block
	position absolute
	top 0
	
.top-page
	display block
	position absolute
	top -100%
	
.dots-list
	position fixed
	bottom 50%
	transform translateY(50%)
	left 0px
	z-index 5
	display block
.dots
	display block
	width 10px
	height 10px
	margin 10px auto
	background-color $grey
	border-radius 50%
	transition all .2s
	a
		display block
		width 100%
		height 100%
		
.active-dot
	background-color $sgreen
	width 20px
	height 20px
	margin 0px auto
	
section:nth-of-type(n+2)
	text-align left
	h2
		margin 15px 0
		font-size 3em
		padding-left 15px
	p
		font-size 1.3em
		font-weight lighter
	blockquote
		font-size 1.5em
		font-style italic
		color lighten($grey, 50%)
		
.page-content
	padding-top 50px
		
.device
	display block
	margin auto
	max-width 100%
	height auto
	margin-top 100px	
		
.services-item
	position relative
	margin-bottom 30px
	padding-left 60px
	a:hover
		color $sgreen
	.services-icon
		position absolute
		display inline-block
		text-align center
		left 0px
		width 50px
		height 50px
		border 1px solid #fff
		border-radius 3px
		color #fff
		font-size 1.5em
	h3
		display block
		margin 0
		vertical-align top
		line-height 50px
		text-transform uppercase
		font-weight bold
		font-size 1.5em
		a
			color #fff
	p
		display inline-block
		max-width 250px
	.fa
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
	.fa-mobile, .fa-laptop, .fa-lightbulb-o
		font-size 1.5em
		
.work-filter
	padding 0
	margin 0
	li
		display inline-block
		font-size 1.5em
		color #fff
		padding 0.6em 2em
		cursor pointer
		list-style-type none
		transition all .3s
		
.filter-bg
	background-color $sgreen
		
.work-items
	font-size 0px
	padding 0
	margin 0
	margin-top 30px
		
.work-item
	display inline-block
	font-size 1rem
	position relative
	width 33%
	vertical-align middle
	overflow hidden
	max-height 228px
	transition all .8s
	float left
	opacity 1
	p
		display none
	img
		height auto
		max-width 100%
		margin auto
		display block
	&:hover
		.work-item-hover
			opacity 1
	.work-item-hover
		position absolute
		background-color rgba(76, 197, 152, .5)
		top 0
		left 0
		opacity 0
		transition all .3s
		display block
		width 100%
		height 100%
		text-align center
		cursor pointer
		.fa-plus
			font-size 5em
			transform translateY(-50%)
			top 50%
			position relative
			color #fff
	
.preview-hidden
	position absolute
	opacity 0
			
.work-items-big
	font-size 0
	list-style-type none
	background-color rgba(255, 255, 255, 0.6)
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	padding 0
	vertical-align middle
	display none
	&:before
		content ''
		display inline-block
		height 100%
		vertical-align middle
	.work-item-big
		font-size 1rem
		display inline-block
		width 100%
		vertical-align middle
		text-align center
		max-height 75%
			
.work-item-big
	.work-item-preview
		display inline-block
		margin auto
		background-color #fff
		padding 15px
		text-align justify
		max-width 720px
		img
			display block
			margin auto
			width 100%
			height auto
		p
			color $bg
			font-size 1em
			line-height 1.3em
			margin-top 30px
			
.contacs-content
	text-align left
	
.contacts-text
	max-width 100%
	margin-bottom 30px
		
.contacts-item
	position relative
	padding-left 60px
	margin-bottom 30px
	a:hover
		color $sgreen
	.contacts-icon
		position absolute
		display inline-block
		text-align center
		left 0px
		width 50px
		height 50px
		border 1px solid #fff
		border-radius 3px
		color #fff
		font-size 1.5em
	h3
		display block
		margin 0
		vertical-align top
		line-height 50px
		text-transform uppercase
		font-weight bold
		font-size 1.5em
		color #fff
	p
		display inline-block
		max-width 250px
		a
			color #fff
	.fa
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		
.contactus
	input
		float left
		width 48%
		height 40px
		line-height 30px
	input, textarea, button
		background-color transparent
		border-radius 4px
		border 2px solid #fff
		margin-bottom 20px
		padding 10px
		box-shadow none
	input, textarea
		&:hover, &:focus
			border-color $sgreen
			outline none
	input:nth-of-type(2n)
		float right
	textarea
		width 100%
		height 120px
		resize none
	button
		display block
		width 100%
		color #fff
		padding 15px 30px
		font-size 1.5em
		
		